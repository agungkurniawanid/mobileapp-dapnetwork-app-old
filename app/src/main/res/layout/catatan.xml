<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_catatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Catatan Client"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_catatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_catatan"
                android:fontFamily="@font/poppins_regular"
                android:text="Pasang wifi di depan taman kolam halaman rumah."
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_close_catatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_catatan"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_pressed_btn1"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:layout_alignParentEnd="true"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="Close"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

</androidx.cardview.widget.CardView>