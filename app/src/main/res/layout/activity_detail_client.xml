<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailClient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- wrapper btn kembali dan heading halaman -->
            <RelativeLayout
                android:id="@+id/wrapper_komponen_btn_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- pembungkus btn kembali -->

                    <!-- judul halaman -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/custom_background_rounded_blue3"
                            android:src="@drawable/angle_small_left" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Kembali"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Detail Client"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- untuk profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="500dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/detail_foto_client"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/image_profile_user1" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nama_client"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Agung Kurniawan"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/buku" />

                            <TextView
                                android:id="@+id/for_catatan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Catatan"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/status_client"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Aktif"
                            android:textColor="#d9d9d9"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/waallet" />

                            <TextView
                                android:id="@+id/detal_id_client"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="DAPCLIENT213214354"
                                android:textColor="#d9d9d9"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:src="@drawable/jeniskelaminn" />

                            <TextView
                                android:id="@+id/jenis_kelamin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Aktif"
                                android:textColor="#d9d9d9"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/harga_paket_dipesan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="200.000"
                            android:textColor="#d9d9d9"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/dt_masukkan_pembayaran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_pressed_btn1"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="Masukkan Pembayaran"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- informasi kontak -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Informasi Kontak"
                    android:textColor="#d9d9d9"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_background_rounded_blue3"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="10dp"
                        android:text="Nomor Telfon"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/dt_nomor_telfon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/custom_border_input2"
                        android:enabled="false"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="Data nomor kosong"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_border_input2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="10dp"
                        android:text="Alamat"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/dt_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_border_input2"
                        android:enabled="false"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="top"
                        android:hint="Data alamat ada kosong"
                        android:inputType="textMultiLine"
                        android:minLines="5"
                        android:padding="10dp"
                        android:scrollbars="vertical"
                        android:textSize="12dp" />
                </LinearLayout>

                <!-- email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_background_rounded_blue3"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="10dp"
                        android:text="Email"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/dt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/custom_border_input2"
                        android:enabled="false"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="Data email kosong"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/card_wa_telfon"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>