<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State saat EditText di-klik -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#00FFFFFF" />
            <stroke
                android:width="3dp"
                android:color="#2A4ECA" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- State default -->
    <item>
        <shape>
            <solid android:color="#00FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#2A4ECA" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
