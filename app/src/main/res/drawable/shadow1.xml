<!-- shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#66000000" />
        </shape>
    </item>

    <!-- Content Layer -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
